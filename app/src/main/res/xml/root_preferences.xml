<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/preferences_global_section">

        <ListPreference
            android:icon="@drawable/ic_translate"
            android:key="@string/preference_language_key"
            android:defaultValue="en"
            android:title="@string/preference_language_title"
            app:useSimpleSummaryProvider="true"
            android:entries="@array/language_entry"
            android:entryValues="@array/language_code" />/>

    </PreferenceCategory>

</PreferenceScreen>